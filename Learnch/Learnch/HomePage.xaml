                            Style="{StaticResource btnMenuItem}"
                            Height="40"
                            MaxHeight="{StaticResource MenuMaxHeight}"
                            MinHeight="40">
                        <TextBlock Text="Entertainment"
                                   Style="{StaticResource CategoryTextStyle}"
                                   Margin="0,-10,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Thin"
                                   FontSize="21.333" />
                    </Button>
                    <Button x:Name="btnArt7"
                            HorizontalAlignment="Stretch"
