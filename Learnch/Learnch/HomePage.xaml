                        Background="#FF79BC9F"
                        Grid.ColumnSpan="2" />
            <TextBlock x:Name="pageTitle"
                       Text="Learn.ch"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       IsHitTestVisible="false"
                       TextWrapping="NoWrap"
                       Margin="0"
                       Grid.Row="0"
                       Grid.Column="1"
                       Height="50"
                       Foreground="White" />
