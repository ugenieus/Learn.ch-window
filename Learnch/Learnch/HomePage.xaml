                        <TextBlock Text="ETC"
                                   Style="{StaticResource CategoryTextStyle}"
                                   Margin="0,-10,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Thin"
                                   FontSize="21.333" />
                    </Button>

                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="recommanded"
                        Grid.Column="2"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Margin="40,0,0,0">
                <StackPanel x:Name="recommended_course"
                            MinHeight="203"
                            VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource TextSubTitleStytle}"
                               Text="Recommended Course"
                               FontWeight="Thin" />
                    <VariableSizedWrapGrid MinHeight="200"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Height="535">
                        <Image HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Source="Assets/thumb_home.png"
                               Margin="0,20,0,0" />
                    </VariableSizedWrapGrid>
                </StackPanel>
                <StackPanel x:Name="recommended_chef"
                            Margin="0,10,0,0"
                            VerticalAlignment="Bottom">
                    <StackPanel MinHeight="10"
                                MaxHeight="100" />
                    <TextBlock Style="{StaticResource TextSubTitleStytle}"
                               Text="Recommended Chef"
                               FontWeight="Thin" />
                    <VariableSizedWrapGrid Margin="0,20,0,0"
